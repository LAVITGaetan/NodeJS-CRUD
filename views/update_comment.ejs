<!-- include header -->
<%- include('include/_header') -%>
    <!-- /include header -->



    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex-justify-between">
                <div class="filter">
                    <a href="/comments"><i class="fas fa-angle-double-left"></i> All Comments</a>
                </div>
            </div>

            <div class="form-title text-center">
                <h2 class="text-dark">Update Comment</h2>
                <span class="text-light">Use the below form to update a comment</span>
            </div>

            <!-- form handling -->
            <form method="POST" id="update_comment">
                <div class="new_comment">
                    <div class="form-group">
                        <label for="name" class="text-light">Name</label>
                        <input type="hidden" name="id" value="<%=comment._id %>">
                        <input type="text" name="label" value="<%=comment.label %>" placeholder="John Doe">
                    </div>
                    <div class="form-group">
                        <label for="email" class="text-light">Email</label>
                        <input type="text" name="text" value="<%=comment.text %>" placeholder="example@gmail.com">
                    </div>
                    <div class="form-group">
                        <label for="status" class="text-light">Status</label>
                        <div class="radio inline">
                            <input type="radio" name="status" value="Active"<%=comment.status == 'Active'?'checked':'' %>>
                            <label for="status" class="text-light">Active</label>
                        </div>
                        <div class="radio inline">
                            <input type="radio" name="status" value="Inactive"<%=comment.status == 'Inactive'?'checked':'' %>>
                            <label for="status" class="text-light">Inactive</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Save</button>
                    </div>
                </div>
            </form>
            <!-- /form handling -->

        </div>
    </main>
    <!-- /Main Site -->

    <!-- include footer -->
    <%- include('include/_footer') -%>
        <!-- /include footer -->